<div class="signage">
  <div class="sign">
    <span class="fast-flicker">w</span>atch l<span class="flicker">i</span>st
  </div>
</div>
<div class="container">
  <h1>Lists#index</h1>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @lists.each do |list| %>
      <div class="col">
        <div class="card h-100">
          <img src="<%= Faker::LoremFlickr.image(size: '1920x1080', search_terms: [list.name]) %>" class="card-img-top" alt="<%= list.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= link_to list.name, list %></h5>
            <p class="card-text">This is a sample description of the list.</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="mt-3">
    <%= link_to "Create List", new_list_path %>
  </div>
</div>
